<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="/js/header.js"></script>
<script>
  const form = document.getElementById('addressForm');
const nameError = document.getElementById('nameError');
const phoneError = document.getElementById('phoneError');
const streetError = document.getElementById('streetError');
const cityError = document.getElementById('cityError');
const postalCodeError = document.getElementById('postalCodeError');

form.addEventListener('submit', (event) => {
  event.preventDefault(); // Prevent form submission

  let isValid = true;

// Name validation

if (!form.name.value.match(/^[A-Za-z]+(?:\s[A-Za-z]+)*$/)) {
  nameError.textContent = 'Please enter a valid full name ';
  nameError.classList.remove('hidden');
  isValid = false;
} else {
  nameError.classList.add('hidden');
}

  // Phone number validation
  if (!form.phone.value.match(/^\+?\d{10}$/)) {
    phoneError.textContent = 'Please enter a valid phone number (10 digits).';
    phoneError.classList.remove('hidden');
    isValid = false;
  } else {
    phoneError.classList.add('hidden');
  }

  // Street address validation
  if (form.street.value.trim() === '') {
    if (!streetError) {
      const errorDiv = document.createElement('div');
      errorDiv.id = 'streetError';
      errorDiv.textContent = 'Please enter your street address.';
      errorDiv.classList.add('text-red-500', 'text-sm', 'mt-1');
      form.street.insertAdjacentElement('afterend', errorDiv);
    }
    isValid = false;
  } else {
    const errorDiv = document.getElementById('streetError');
    if (errorDiv) errorDiv.remove();
  }

  // City validation
  if (form.city.value.trim() === '') {
    if (!cityError) {
      const errorDiv = document.createElement('div');
      errorDiv.id = 'cityError';
      errorDiv.textContent = 'Please enter your city.';
      errorDiv.classList.add('text-red-500', 'text-sm', 'mt-1');
      form.city.insertAdjacentElement('afterend', errorDiv);
    }
    isValid = false;
  } else {
    const errorDiv = document.getElementById('cityError');
    if (errorDiv) errorDiv.remove();
  }

  // Postal code validation
  if (!form.postalCode.value.match(/^\d{5,6}$/)) {
    if (!postalCodeError) {
      const errorDiv = document.createElement('div');
      errorDiv.id = 'postalCodeError';
      errorDiv.textContent = 'Please enter a valid pin code';
      errorDiv.classList.add('text-red-500', 'text-sm', 'mt-1');
      form.postalCode.insertAdjacentElement('afterend', errorDiv);
    }
    isValid = false;
  } else {
    const errorDiv = document.getElementById('postalCodeError');
    if (errorDiv) errorDiv.remove();
  }

  
  if (isValid)  { Swal.fire({
        title: 'Success!',
        text: 'Your address has been saved successfully.',
        icon: 'success',
        confirmButtonText: 'Okay',
      }).then((result) => {
        if (result.isConfirmed) {
          form.submit();
        }
      });
    }} );


</script>
