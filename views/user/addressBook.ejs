      <div class="col-span-3">
        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 sm:mb-6 text-gray-800">Address Book</h1>
        <div class="bg-white shadow-md sm:shadow-lg rounded-xl overflow-hidden border border-blue-100">
          <div class="p-4 sm:p-6">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 gap-4">
              <h3 class="text-lg sm:text-xl font-semibold text-gray-700">Saved Addresses</h3>
              <a href="/addaddress" class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 sm:px-6 rounded-lg text-sm sm:text-base transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 shadow-sm sm:shadow-md hover:shadow-lg w-full sm:w-auto text-center">
                Add Address
              </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
              <% if (recentAddress.length > 0) { %>
                <% recentAddress.forEach((address) => { %>
                  <div 
                    id="recentAddress-<%= address.id %>" 
                    class="address-card bg-white border border-gray-200 rounded-lg sm:rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md sm:hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 sm:hover:-translate-y-2"
                  >
                    <div class="flex justify-between items-start mb-3 sm:mb-4">
                      <div>
                        <h4 class="text-base sm:text-lg font-semibold text-gray-800 mb-1 sm:mb-2"><%= address.name %></h4>
                        <span class="inline-block bg-blue-100 text-blue-800 text-xs sm:text-sm px-2 py-1 rounded-full"><%= address.addressType %></span>
                      </div>
                      <div class="flex space-x-2">
                        <a href="/editAddress?id=<%= address._id %>" class="text-blue-500 hover:text-blue-700 transition-colors text-sm sm:text-base">
                          <i class="fas fa-edit"></i>
                        </a>
                        <button 
                          onclick="deleteAddress('<%= address._id %>')" 
                          class="text-red-500 hover:text-red-700 transition-colors text-sm sm:text-base"
                        >
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </div>
                    </div>
                    <div class="text-sm sm:text-base text-gray-600 space-y-1 sm:space-y-2">
                      <p><strong>Phone:</strong> <%= address.phone %></p>
                      <p><strong>Address:</strong> <%= address.street %>, <%= address.apartment %></p>
                      <p><%= address.city %>, <%= address.postalCode %></p>
                      <% if (address.landmark) { %>
                        <p><strong>Landmark:</strong> <%= address.landmark %></p>
                      <% } %>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="col-span-full py-8 sm:py-12 flex flex-col items-center justify-center bg-blue-50 rounded-lg">
                  <svg class="w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <p class="text-center text-gray-500 mb-4">No addresses found</p>
