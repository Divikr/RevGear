<script>

document.getElementById('mobileMenuButton').addEventListener('click', function() {
    const menuContent = document.getElementById('mobileMenuContent');
    const menuIcon = document.getElementById('mobileMenuIcon');
    
    menuContent.classList.toggle('hidden');
    menuIcon.classList.toggle('fa-chevron-down');
    menuIcon.classList.toggle('fa-chevron-up');
  });

 
  function deleteAddress(addressId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {
        fetch(`/deleteAddress/${addressId}`, {
          method: 'DELETE',
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            document.getElementById(`recentAddress-${addressId}`).remove();
            if (document.querySelectorAll('.address-card').length === 0) {
              document.getElementById('noAddressMessage').classList.remove('hidden');
            }
            Swal.fire(
              'Deleted!',
              'Your address has been deleted.',
              'success'
            );
          } else {
            throw new Error(data.message || 'Failed to delete address');
          }
        })
        .catch(error => {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Failed to delete address',
          });
        });
      }
    });
  }


async function deleteAddress(addressId) {
   
    const result = await Swal.fire({
        title: 'Are you sure?',
        text: "You want to delete address!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#DB4444',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    });

    if (result.isConfirmed) {
        try {
          
            const response = await fetch(`/deleteAddress/${addressId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (response.ok) {
                Swal.fire(
                    'Deleted!',
                    'Your address has been deleted.',
                    'success'
                );

             
                const addressElement = document.getElementById(`recentAddress-${addressId}`);
                if (addressElement) {
                    addressElement.remove();
                }
            } else {
                const errorData = await response.json();
                Swal.fire(
                    `Error!,
                    Failed to delete address: ${errorData.error || "Unknown error"},
                    error`
                );
            }
        } catch (error) {
            console.error("Error deleting address:", error);
            Swal.fire(
                'Error!',
                'An error occurred. Please try again.',
                'error'
            );
        }
    }
}
</script>
