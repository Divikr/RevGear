<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="/js/header.js"></script>
<script>

 
 document.getElementById('mobileMenuButton').addEventListener('click', function() {
    const menuContent = document.getElementById('mobileMenuContent');
    const menuIcon = document.getElementById('mobileMenuIcon');
    
    menuContent.classList.toggle('hidden');
    menuIcon.classList.toggle('fa-chevron-down');
    menuIcon.classList.toggle('fa-chevron-up');
  });

const form = document.getElementById('profileForm');
const nameInput = document.getElementById('name');
const emailInput = document.getElementById('email');
const phoneInput = document.getElementById('phone');
                                    
form.addEventListener('submit', function(event) {
  event.preventDefault();

  const name = nameInput.value.trim();
  const email = emailInput.value.trim();
  const phone = phoneInput.value.trim();

  const nameRegex = /^[A-Za-z][A-Za-z\s]{2,}$/; 
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; 
  const phoneRegex = /^[1-9]\d{9}$/; 

  let isValid = true;
  let message = '';

  if (!nameRegex.test(name) || /^\s/.test(nameInput.value)) {
    isValid = false;
    message += 'Enter a valid name\n';
  }


  if (!emailRegex.test(email)) {
    isValid = false;
    message += 'Invalid Email: Please enter a valid email address.\n';
  }


  if (!phoneRegex.test(phone) || /^\s/.test(phoneInput.value)) {
    isValid = false;
    message += 'Invalid Phone Number \n';
  }

  if (isValid) {
    Swal.fire({
      title: 'Success!',
      text: 'Your changes have been saved.',
      icon: 'success',
      confirmButtonText: 'Okay'
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
      }
    });
  } else {
    Swal.fire({
      title: 'Validation Error!',
      text: message,
      icon: 'error',
      confirmButtonText: 'Retry'
    });
  }
});


</script>
