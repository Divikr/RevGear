  <div class="bg-gradient-to-br from-white to-blue-50 shadow-2xl rounded-xl overflow-hidden">
    <div class="grid grid-cols-4 gap-6 p-6">
     
      <div class="col-span-1 bg-white border border-blue-100 p-4 rounded-xl shadow-lg transition-all duration-500 hover:shadow-2xl">
        <ul class="space-y-4">
          <li class="sidebar-item">
            <a href="/profile" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-user text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Profile</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="/addressbook" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-map-marker-alt text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Address</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-credit-card text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Payment</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-wallet text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Wallet</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-box text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Order</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-blue-50 hover:shadow-md">
              <i class="fas fa-heart text-blue-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-blue-600 group-hover:font-semibold transition-all">Wishlist</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="flex items-center p-3 rounded-lg group transition-all duration-300 hover:bg-red-50 hover:shadow-md">
              <i class="fas fa-sign-out-alt text-red-500 mr-4 transform transition-transform group-hover:scale-110 group-hover:rotate-6"></i>
              <span class="text-gray-700 group-hover:text-red-600 group-hover:font-semibold transition-all">Logout</span>
            </a>
          </li>
        </ul>
      </div>

      <div class="col-span-3">
        <h1 class="text-3xl font-bold mb-6 text-gray-800 animate-fade-in">Edit Address</h1>
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-blue-100">
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-4 text-gray-700">Address Details</h3>
            
            <form id="addressForm" action="/editAddress/<%= address._id %>" method="POST" class="space-y-4">
            
              <div class="mb-4">
                <div class="flex space-x-4">
                  <label class="flex-1">
                    <input type="radio" name="addressType" value="Home" class="sr-only peer" checked>
                    <div class="p-3 text-center rounded-lg border-2 cursor-pointer transition-all 
                      peer-checked:border-blue-500 peer-checked:bg-blue-50 
                      hover:border-blue-200 group">
                      <i class="fas fa-home mb-2 text-xl text-blue-500 
                        group-hover:text-blue-600 transition-all"></i>
                      <p class="font-medium text-gray-700 group-hover:text-blue-600 transition-all">Home</p>
                    </div>
                  </label>
                  
                  <label class="flex-1">
                    <input type="radio" name="addressType" value="Office" class="sr-only peer">
                    <div class="p-3 text-center rounded-lg border-2 cursor-pointer transition-all 
                      peer-checked:border-blue-500 peer-checked:bg-blue-50 
                      hover:border-blue-200 group">
                      <i class="fas fa-building mb-2 text-xl text-blue-500
                        group-hover:text-blue-600 transition-all"></i>
                      <p class="font-medium text-gray-700 group-hover:text-blue-600 transition-all">Office</p>
                    </div>
                  </label>
                </div>
              </div>

          
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block font-medium text-gray-700 mb-2">Full Name</label>
                  <input type="text" id="name" value="<%= address.name  %>" name="name" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300" required>
                  <div id="nameError" class="text-red-500 text-sm mt-1 hidden">Please enter your name.</div>
                </div>
                <div>
                  <label for="phone" class="block font-medium text-gray-700 mb-2">Phone Number</label>
                  <input type="tel" id="phone" name="phone" value="<%= address.phone  %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300" required>
                  <div id="phoneError" class="text-red-500 text-sm mt-1 hidden">Please enter a valid phone number.</div>
                </div>
                
                <div class="col-span-2">
                  <label for="street" class="block font-medium text-gray-700 mb-2">Street Address</label>
                  <input type="text" id="street" name="street" value="<%= address.street  %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300" required>
                </div>
                
                <div>
                  <label for="apartment" class="block font-medium text-gray-700 mb-2">Apartment/Suite</label>
                  <input type="text" id="apartment" name="apartment" value="<%= address.apartment  %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300">
                </div>
                
                <div>
                  <label for="landmark" class="block font-medium text-gray-700 mb-2">Landmark</label>
                  <input type="text" id="landmark" name="landmark" value="<%= address.landmark  %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300">
                </div>
                
                <div>
                  <label for="city" class="block font-medium text-gray-700 mb-2">City</label>
                  <input type="text" id="city" name="city" value="<%= address.city  %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300" required>
                </div>
                
                <div>
                  <label for="postalCode" class="block font-medium text-gray-700 mb-2">Pin Code</label>
                  <input type="text" id="postalCode" name="postalCode" value="<%= address.postalCode %>" class="border-2 border-blue-200 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full px-4 py-2 transition-all duration-300" required>
                </div>
              </div>

        
              <div class="mt-6 text-right">
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-6 rounded-lg transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 shadow-md hover:shadow-lg">
                 Update Address
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>


<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="/js/header.js"></script>
<script>
  const form = document.getElementById('addressForm');
  const nameError = document.getElementById('nameError');
  const phoneError = document.getElementById('phoneError');

  form.addEventListener('submit', (event) => {
    event.preventDefault();

    let isValid = true;

    if (form.name.value.trim() === '') {
      nameError.classList.remove('hidden');
      isValid = false;
    } else {
      nameError.classList.add('hidden');
    }

    if (!form.phone.value.match(/^\+?\d{10,15}$/)) {
      phoneError.classList.remove('hidden');
      isValid = false;
    } else {
      phoneError.classList.add('hidden');
    }

    if (isValid) {
      Swal.fire({
        icon: 'success',
        title: 'Address Updated Successfully!',
        text: 'Your address has been updated.',
        confirmButtonText: 'OK',
        confirmButtonColor: '#3085d6',
        timer: 3000,
        timerProgressBar: true
      }).then(() => {
        form.submit();
      });
    }
  });
</script>
</body>
</html>