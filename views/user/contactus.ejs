    <script>
        function formValidation(){
          const email=document.getElementById("email").value
          const name=document.getElementById("name").value
          const phone=document.getElementById("phone-field").value
          const message=document.getElementById("message").value
          const nameError=document.getElementById("nameError")
          const emailError=document.getElementById("emailError")
          const phoneError=document.getElementById("phoneError")
          const messageError=document.getElementById("messageError")
          const emailRegex = /^[a-z0-9._-]+@[a-z]+\.[a-z]{2,3}$/;
          const nameRegex = /^[^\s][a-zA-Z]{2,}(?:\s[a-zA-Z]*)?$/
        console.log(email,name);
        if(!nameRegex.test(name)){
          nameError.innerText="Please provide a valid name"
          return false
        }else{
           nameError.innerText=""
        }
        if(!emailRegex.test(email)){
          emailError.innerText="Please provide a valid email"
          return false
        }else{
          emailError.innerText=""
        }
        if(phone.trim()===""||phone.length<10){
          phoneError.innerText="Please provide phone"
          return false
        }else{
          phoneError.innerText=""
        }
        if(message.trim()===""){
          messageError.innerText="Please provide message"
          return false
        }else{
          messageError.innerText=""
        }
        return true
        }
        
      </script>
       <script>
   $(document).ready(function () {
    $("#submit-form").submit((e) => {
        e.preventDefault();
        
        if (formValidation()) {
            Swal.fire({
                title: "Submitting...",
                text: "Please wait while we process your request.",
                icon: "info",
                showConfirmButton: false,
                allowOutsideClick: false
            });

            $.ajax({
                url: "https://script.google.com/macros/s/AKfycbwyQGy8f6Y4m6Epf24Ztfg7Iar8ApopNlJkkr7cOzOp0Vqu-g5gsDxO3xnH2z2g4fcvRQ/exec",
                data: $("#submit-form").serialize(),
                method: "POST",
                success: function (response) {
                    Swal.fire({
                        title: "Success!",
                        text: "Your form has been submitted successfully.",
                        icon: "success",
                        confirmButtonText: "OK",
                        confirmButtonColor: "#28a745"
                    }).then(() => {
                        $("#submit-form")[0].reset(); 
                    });
                },
                error: function (err) {
                    Swal.fire({
                        title: "Error!",
                        text: "Something went wrong. Please try again later.",
                        icon: "error",
                        confirmButtonText: "OK",
                        confirmButtonColor: "#d33"
                    });
                }
            });
        }
    });
});

