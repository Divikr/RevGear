<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin/addCategory.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    /* Hide scrollbar but allow scrolling */
    body {
        overflow: hidden;
    }
    .main-content {
        overflow-y: auto;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
    }
    .main-content::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
    }
    .sidebar {
        width: 250px;
        min-width: 250px;
    }
</style>
</head>

<body class="bg-gray-900">
    <div class="flex min-h-screen">
        
        <div class="sidebar">
            <div class="admin-profile">
                <div class="admin-avatar">A</div>
            </div>
            <ul class="nav-menu">
                <a href="/admin/dashboard" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="nav-item">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/customer" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/category" class="nav-item">
                    <i class="fas fa-folder-open"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/orderlists" class="nav-item">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/coupons" class="nav-item active">
                    <i class="fas fa-tags"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/sales" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Sales</span>
                </a>
                <a href="/admin/banners" class="nav-item">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
            </ul>
        </div>
        </div>

         <!-- Main Content with improved alignment -->
         <div class="main-content flex-1 p-8">
            <div class="max-w-7xl mx-auto space-y-8">
                <!-- Header -->
                <div class="flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-white">RevGear</h1>
                    <a href="/admin/dashboard" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-white">
                        Back
                    </a>
                </div>
    
                <!-- Coupon Form -->
                <div class="bg-gray-800 rounded-xl shadow-xl p-8">
                    <h2 class="text-2xl font-bold mb-8 pb-4 border-b border-gray-700 text-white">Add/Edit Coupon</h2>
                    <form id="couponForm" class="space-y-8">
                        <!-- Basic Details Section -->
                        <div>
                          
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Code</label>
                                    <input type="text" name="code" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white" required>
                                </div>
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Discount Type</label>
                                    <select name="offerType" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white">
                                        <option value="Percentage">Percentage</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Discount Value</label>
                                    <input type="number" name="offerValue" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white" required>
                                </div>
                            </div>
                        </div>
                
                        <!-- Duration Section -->
                        <div>
                           
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Valid From</label>
                                    <input type="date" 
                                           name="createdOn" 
                                           min="2025-01-10"
                                           class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white">
                                </div>
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Valid Until</label>
                                    <input type="date" 
                                           name="expiredOn" 
                                           min="2025-01-11"
                                           class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white" 
                                           required>
                                </div>
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Min Purchase Amount</label>
                                    <input type="number" name="minimumPrice" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white" required>
                                </div>
                            </div>
                        </div>
                
                        <!-- Usage Limits Section -->
                        <div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    <label class="block text-sm font-medium mb-2 text-white">Max Uses</label>
                                    <input type="number" name="usageLimit" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors text-white">
                                </div>
                                <div class="flex items-center">
                                    <input type="checkbox" id="isActive" name="isActive" class="w-5 h-5 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500">
                                    <label for="isActive" class="ml-3 text-sm font-medium text-white">Is Active</label>
                                </div>
                            </div>
                        </div>
                
                        <div class="flex justify-end pt-6 border-t border-gray-700">
                            <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors">
                                Save Coupon
                            </button>
                        </div>
                    </form>
                </div>


                <!-- Coupons Grid -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pb-8">
                    <% coupons.forEach(coupon => { %>
                        <div class="bg-gray-800 rounded-xl shadow-xl overflow-hidden">
                            <div class="p-8">
                                <div class="flex justify-between items-start mb-6">
                                    <div>
                                        <h3 class="text-2xl font-bold mb-2 text-white"><%= coupon.code %></h3>
                                        <span class="inline-block px-4 py-1 text-sm rounded-full <%= coupon.status === 'true' ? 'bg-red-500' : 'bg-green-500' %> text-white">
                                            <%= coupon.status %>
                                        </span>
                                    </div>
                                    <div class="flex gap-4">
                                        <button onclick="handleEditCoupon('<%= coupon.code %>')" class="text-blue-400 hover:text-blue-300 transition-colors">
                                            <i class="fas fa-edit text-lg"></i>
                                        </button>
                                        <button onclick="handleDeleteCoupon('<%= coupon.code %>')" class="text-red-400 hover:text-red-300 transition-colors">
                                            <i class="fas fa-trash-alt text-lg"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="space-y-4 text-white">
                                    <p class="flex justify-between text-lg">
                                        <span class="text-gray-300">Discount:</span>
                                        <span class="font-semibold"><%= coupon.offerValue %>%</span>
                                    </p>
                                    <p class="flex justify-between text-lg">
                                        <span class="text-gray-300">Min Purchase:</span>
                                        <span class="font-semibold"><%= coupon.minimumPrice %></span>
                                    </p>
                                    <p class="flex justify-between text-lg">
                                        <span class="text-gray-300">Usage Limit:</span>
                                        <span class="font-semibold"><%= coupon.usageLimit %></span>
                                    </p>
                                    <p class="flex justify-between text-lg">
                                        <span class="text-gray-300">Created On:</span>
                                        <span class="font-semibold"><%= new Date(coupon.createdOn).toLocaleDateString() %></span>
                                    </p>
                                    <p class="flex justify-between text-lg">
                                        <span class="text-gray-300">Expires:</span>
                                        <span class="font-semibold"><%= new Date(coupon.expiredOn).toLocaleDateString() %></span>
                                    </p>
                                </div>
                            </div>
                            <div class="bg-gray-700 px-8 py-4">
                                <div class="flex justify-between items-center text-gray-400">
                                    <span>Per User: <%= coupon.usagePerUserLimit %></span>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
  
    
       

    <script>
    document.getElementById('couponForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            try {
                Swal.fire({ title: 'Saving...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

                const formData = new FormData(this);
                const data = Object.fromEntries(formData.entries());
                data.isActive = formData.has('isActive');
                console.log(data)

                const response = await fetch('/admin/coupon', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data),
                });

                if (!response.ok) throw new Error('Failed to save coupon');
                Swal.fire('Success', 'Coupon added successfully!', 'success').then(() => {
                    window.location.href = '/admin/coupon';
                });
            } catch (err) {
                Swal.fire('Error', err.message || 'Something went wrong', 'error');
            }
        });

        function handleEditCoupon(couponCode) {
            window.location.href = `/admin/coupon/edit/${couponCode}`;
        }

        function handleDeleteCoupon(couponCode) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Add your delete API call here
                    fetch(`/admin/coupon/${couponCode}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (!response.ok) throw new Error('Failed to delete coupon');
                        Swal.fire(
                            'Deleted!',
                            'Coupon has been deleted.',
                            'success'
                        ).then(() => {
                            window.location.reload();
                        });
                    })
                    .catch(error => {
                        Swal.fire(
                            'Error!',
                            'Failed to delete coupon.',
                            'error'
                        );
                    });
                }
            });
        }
    </script>
</body>
</html>
