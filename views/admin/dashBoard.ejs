<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RevGear Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/admin/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<style>


</style>
</head>
<body>
    <div class="dashboard">
        <div class="sidebar" id="sidebar">
           

            <div class="admin-profile">
                <div class="admin-avatar">A</div>
              
            </div>

            <ul class="nav-menu">
                <a href="/admin/dashboard" class="nav-item active">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="nav-item">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/customer" class="nav-item ">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/category" class="nav-item">
                    <i class="fas fa-folder-open"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/orderlists" class="nav-item">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin//coupon" class="nav-item">
                    <i class="fas fa-tags"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/salesreport" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Sales</span>
                </a>
                <a href="/admin/offer" class="nav-item">
                    <i class="fas fa-gift"></i>
                    <span>Offer</span>
                </a>
            </ul>
        </div>

        <div class="main-content">
            <div class="header">
                <h1>RevGear</h1>
                <a href="/admin/adminlogout" id="adminlogout">Log Out</a>
            </div>

            <div class="flex flex-wrap justify-between gap-6 mt-10 px-4 md:px-10 mb-8">
                <!-- Total Revenue Card -->
                <div class="bg-gradient-to-r from-blue-500 to-blue-700 text-white p-6 rounded-xl shadow-xl flex-1 text-center transition-transform duration-300 transform hover:scale-105 mb-6 md:mb-0">
                    <h3 class="text-3xl font-semibold"><%= totalRevenue.toFixed(2) %></h3>
                    <p class="text-lg mt-2 opacity-80">Total Revenue</p>
                </div>
            
                <!-- Total Orders Card -->
                <div class="bg-gradient-to-r from-green-500 to-green-700 text-white p-6 rounded-xl shadow-xl flex-1 text-center transition-transform duration-300 transform hover:scale-105 mb-6 md:mb-0">
                    <h3 class="text-3xl font-semibold"><%= totalOrders %></h3>
                    <p class="text-lg mt-2 opacity-80">Total Orders</p>
                </div>
            
                <!-- Number of Coupons Card -->
                <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 text-white p-6 rounded-xl shadow-xl flex-1 text-center transition-transform duration-300 transform hover:scale-105 mb-6 md:mb-0">
                    <h3 class="text-3xl font-semibold"><%= totalCoupons %></h3>
                    <p class="text-lg mt-2 opacity-80">Number of Coupons</p>
                </div>
            
                <!-- Number of Offers Card -->
                <div class="bg-gradient-to-r from-red-500 to-red-600 text-white p-6 rounded-xl shadow-xl flex-1 text-center transition-transform duration-300 transform hover:scale-105 mb-6 md:mb-0">
                    <h3 class="text-3xl font-semibold"><%= totalOffers %></h3>
                    <p class="text-lg mt-2 opacity-80">Number of Offers</p>
                </div>
            </div>
            
            
            
            <div class="flex flex-wrap gap-8 justify-center bg-gray-900 min-h-screen py-8">
                <!-- Payment Method Distribution Card -->
                <div class="flex-1 min-w-[50px] max-w-[20%] bg-gradient-to-r from-blue-700 to-indigo-800 p-8 rounded-xl shadow-2xl transform transition duration-300 ease-in-out hover:scale-105">
                    <h3 class="text-3xl font-semibold text-white mb-6 text-center">Payment Method Distribution</h3>
                    <div class="w-full">
                        <canvas id="paymentMethodChart"></canvas>
                    </div>
                </div>
                
                <!-- Bar Chart Card -->
                <div class="flex-1 min-w-[200px] max-w-[40%] bg-gradient-to-r from-purple-700 to-pink-800 p-8 rounded-xl shadow-2xl transform transition duration-300 ease-in-out hover:scale-105">
                    <h3 class="text-3xl font-semibold text-white mb-6 text-center">Line Graph</h3>
                    <div class="w-full">
                        <canvas id="lineGraph"></canvas>
                    </div>
                </div>
            </div>

          <div class="flex flex-wrap justify-between gap-6 mt-10 px-4 md:px-10 mb-8">
    <!-- Delivered Orders Card -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white p-6 rounded-xl shadow-xl flex-1 text-center mb-6 md:mb-0 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <h3 class="text-3xl font-semibold tracking-tight">Orders Delivered</h3>
        <p class="text-4xl font-extrabold mt-3 opacity-90"><%= deliveredOrders %></p>
       
    </div>

    <!-- Canceled Orders Card -->
    <div class="bg-gradient-to-r from-red-600 to-red-800 text-white p-6 rounded-xl shadow-xl flex-1 text-center mb-6 md:mb-0 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <h3 class="text-3xl font-semibold tracking-tight">Orders Canceled</h3>
        <p class="text-4xl font-extrabold mt-3 opacity-90"><%= canceledOrders %></p>
       
    </div>

    <!-- Returned Orders Card -->
    <div class="bg-gradient-to-r from-green-600 to-green-800 text-white p-6 rounded-xl shadow-xl flex-1 text-center mb-6 md:mb-0 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <h3 class="text-3xl font-semibold tracking-tight">Orders Returned</h3>
        <p class="text-4xl font-extrabold mt-3 opacity-90"><%= returnedOrders %></p>
      
    </div>
</div>



<div class="flex flex-wrap lg:flex-nowrap gap-6 p-6 bg-gray-900 rounded-lg shadow-md">
    <!-- Top Products Section -->
    <div class="top-products flex-1 bg-gradient-to-b from-gray-800 to-gray-900 rounded-lg shadow-lg p-6 animate-fade-in">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Top 5 Products</h2>
        <% try { %>
            <% if (typeof topProducts !== 'undefined' && topProducts && topProducts.length > 0) { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-gray-800 border border-gray-700 rounded-lg animate-fade-in transition-transform duration-500 ease-in-out">
                        <thead class="bg-gradient-to-r from-gray-700 to-gray-800 text-gray-300">
                            <tr>
                                <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Product Name</th>
                                <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Total Quantity Ordered</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topProducts.forEach((product) => { %>
                                <tr class="hover:bg-gray-700 hover:scale-105 transition-all duration-300 ease-in-out">
                                    <td class="px-6 py-4 border-b border-gray-700 text-gray-300 font-medium">
                                        <%= product?.productName || 'N/A' %>
                                    </td>
                                    <td class="px-6 py-4 border-b border-gray-700 text-gray-300 font-medium">
                                        <%= product?.totalQuantity || 0 %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-gray-400 italic mt-4">No top products data available.</p>
            <% } %>
        <% } catch (error) { %>
            <p class="text-red-400 mt-4">Error displaying top products: <%= error.message %></p>
        <% } %>
    </div>

    <!-- Recent Orders Section -->
    <div class="recent-orders flex-1 bg-gradient-to-b from-gray-800 to-gray-900 rounded-lg shadow-lg p-6 animate-fade-in">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Recent Orders</h2>
        <% if (recentOrders && recentOrders.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-800 border border-gray-700 rounded-lg animate-fade-in transition-transform duration-500 ease-in-out">
                    <thead class="bg-gradient-to-r from-gray-700 to-gray-800 text-gray-300">
                        <tr>
                            <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Order Date</th>
                            <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Products</th>
                            <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Status</th>
                            <th class="px-6 py-4 border-b border-gray-700 text-left uppercase tracking-wide text-sm">Payment Method</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentOrders.forEach(order => { %>
                            <tr class="hover:bg-gray-700 hover:scale-105 transition-all duration-300 ease-in-out">
                                <td class="px-6 py-4 border-b border-gray-700 text-gray-300 font-medium">
                                    <%= new Date(order.orderDate).toLocaleDateString() %>
                                </td>
                                <td class="px-6 py-4 border-b border-gray-700 text-gray-300 font-medium">
                                    <% order.items.forEach(item => { %>
                                        <div class="mb-1">
                                            <%= item.product.productName %>
                                        </div>
                                    <% }) %>
                                </td>
                                <td class="px-8 py-6 border-b border-gray-700">
                                    <span class="whitespace-nowrap px-3 py-2 rounded-full text-sm
                                        <%= order.orderStatus === 'Delivered' ? 'bg-green-600 text-green-100' :
                                           order.orderStatus === 'Cancelled' ? 'bg-red-600 text-red-100' :
                                           'bg-blue-600 text-blue-100' %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 border-b border-gray-700 text-gray-300 font-medium">
                                    <%= order.paymentMethod %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-gray-400 italic mt-4">No recent orders to display.</p>
        <% } %>
    </div>
</div>






        </div>
    </div>

    <script>
const paymentMethodData = <%- JSON.stringify(paymentMethodData) %>;

// Extract labels and data for the chart
const labels = paymentMethodData.map(data => data.method);
const dataCounts = paymentMethodData.map(data => data.count);

// Create a donut chart using Chart.js
const ctx = document.getElementById('paymentMethodChart').getContext('2d');
new Chart(ctx, {
    type: 'doughnut',
    data: {
        labels: labels,
        datasets: [{
            data: dataCounts,
            backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
            hoverOffset: 6, // More distinct hover effect
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'top',
                labels: {
                    font: {
                        size: 12, // More readable legend
                        weight: 'bold'
                    }
                }
            },
            tooltip: {
                callbacks: {
                    label: function (context) {
                        return `${context.label}: ${context.raw} votes`;
                    }
                }
            }
        },
        animation: {
            animateScale: true,
            animateRotate: true,
        }
    }
});


document.addEventListener('DOMContentLoaded', () => { 
        const orderGraphData = <%- JSON.stringify(orderGraphData)  %>;
        const labels = orderGraphData.map(data => data.date);
        const dataPoints = orderGraphData.map(data => data.count);

        const ctx = document.getElementById('lineGraph').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Order Count',
                    data: dataPoints,
                    backgroundColor: 'rgba(255, 255, 255, 0.2)', // White fill under the line
                    borderColor: 'rgba(255, 255, 255, 1)',       // White line color
                    borderWidth: 2,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.2)', // White grid lines
                        },
                        ticks: {
                            color: 'white' // White text for Y-axis labels
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.2)' // White grid lines
                        },
                        ticks: {
                            color: 'white' // White text for X-axis labels
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'white', // White text for legend labels
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.label}: ${context.raw} orders`; // Customize tooltip
                            }
                        },
                        bodyColor: 'white', // White text in tooltip
                        titleColor: 'white', // White title in tooltip
                        backgroundColor: 'rgba(0, 0, 0, 0.7)' // Dark background for better contrast
                    }
                }
            }
        });
    });

// Event listener for time range buttons
document.querySelectorAll('.btn-time-range').forEach(button => {
    button.addEventListener('click', () => {
        const range = button.getAttribute('data-range');
        const data = chartData[range];
        updateChartData(data.labels, data.dataPoints);
    });
});

// Initialize chart with default data (Day-wise)
updateChartData(chartData.day.labels, chartData.day.dataPoints);


        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const navItems = document.querySelectorAll('.nav-item');

            sidebarToggle.addEventListener('click', () => {
                sidebar.classList.toggle('collapsed');
  
                navItems.forEach((item, index) => {
                    item.style.transitionDelay = `${index * 50}ms`;
                });
            });

            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    navItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                });
            });

            const adminAvatar = document.querySelector('.admin-avatar');
            setInterval(() => {
                adminAvatar.style.animation = 'pulse 1.5s infinite';
                setTimeout(() => {
                    adminAvatar.style.animation = 'none';
                }, 1500);
            }, 5000);
        });



        async function loadDashboardStats() {
        try {
            const response = await fetch('/dashboard-stats');
            const stats = await response.json();

            document.getElementById('total-revenue').textContent = `$${stats.totalRevenue.toFixed(2)}`;
            document.getElementById('total-orders').textContent = stats.totalOrders;
            document.getElementById('total-coupons').textContent = stats.totalCoupons;
            document.getElementById('total-offers').textContent = stats.totalOffers;
        } catch (err) {
            console.error('Failed to load dashboard stats:', err);
        }
    }

    // Load stats on page load
    document.addEventListener('DOMContentLoaded', loadDashboardStats);
    </script>
</body>
</html>