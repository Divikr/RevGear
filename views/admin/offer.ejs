<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin/addCategory.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
 
   
    
    body {
        overflow: auto;
    }
    
    .main-content {
        overflow-y: auto;
        max-height: 100vh;    }
    
    .main-content::-webkit-scrollbar {
        display: block; 
    }
    
    .sidebar {
        width: 250px;
        min-width: 250px;
    }
</style>
</head>

<body class="bg-gray-900">
    <div class="flex min-h-screen">
        
        <div class="sidebar">
            <div class="admin-profile">
                <div class="admin-avatar">A</div>
            </div>
            <ul class="nav-menu">
                <a href="/admin/dashboard" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="nav-item">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/customer" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/category" class="nav-item">
                    <i class="fas fa-folder-open"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/orderlists" class="nav-item">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/coupon" class="nav-item ">
                    <i class="fas fa-tags"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/salesreport" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Sales</span>
                </a>
                <a href="/admin/offer" class="nav-item  active">
                    <i class="fas fa-gift"></i>
                    <span>Offer</span>
                </a>
            </ul>
        </div>
        </div>

        <div class="main-content">
            <div class="header">
                <h1>RevGear</h1>
                <a href="/admin/dashboard" id="adminlogout">Back</a>
            </div>
            <br>


            <section class="content-main bg-gray-900 text-white p-6">
                <div class="content-header flex justify-between items-center mb-6">
                    <div>
                        <h2 class="content-title text-2xl font-semibold">Offers</h2>
                        
                    </div>
                    <div>
                        <a class="btn bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" href="/admin/addOffer">Add Offer</a>
                    </div>
                </div>
                <div class="card bg-gradient-to-br from-gray-900 to-gray-800 shadow-2xl rounded-xl overflow-hidden">
                    <div class="card-body p-8">
                        <!-- Table Header Section -->
                        
                        
                        <div class="overflow-x-auto">
                            <table class="table-auto w-full text-left border-collapse">
                                <% if (offers.length > 0) { %>
                                    <thead>
                                        <tr class="bg-gradient-to-r from-indigo-600 to-purple-600">
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Sl no</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Name</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Discount</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Start Date</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">End Date</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Offer Type</th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Product </th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider whitespace-nowrap">Category </th>
                                            <th class="px-4 py-3 text-sm font-semibold text-white uppercase tracking-wider text-center whitespace-nowrap">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% offers.forEach((offer, i) => { %>
                                            <tr class="bg-gray-800/50 hover:bg-gray-700/50 transition-all duration-300">
                                                <td class="px-4 py-3 text-gray-300 font-medium whitespace-nowrap"><%= i + 1 %></td>
                                                <td class="px-4 py-3 whitespace-nowrap truncate max-w-xs">
                                                    <span class="font-medium text-indigo-400"><%= offer.offerName %></span>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <span class="px-2 py-1 text-sm font-medium text-green-400 bg-green-400/10 rounded-full">
                                                        â‚¹<%= offer.discount %>
                                                    </span>
                                                </td>
                                                <td class="px-4 py-3 text-gray-300 whitespace-nowrap"><%= offer.formattedStartDate %></td>
                                                <td class="px-4 py-3 text-gray-300 whitespace-nowrap"><%= offer.formattedEndDate %></td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <span class="px-2 py-1 text-sm font-medium text-purple-400 bg-purple-400/10 rounded-full">
                                                        <%= offer.offerType %>
                                                    </span>
                                                </td>
                                                <td class="px-4 py-3 text-gray-300 whitespace-nowrap truncate max-w-xs"><%= offer.productNames || 'N/A' %></td>
                                                <td class="px-4 py-3 text-gray-300 whitespace-nowrap truncate max-w-xs"><%= offer.categoryNames || 'N/A' %></td>
                                                <td class="px-4 py-3 text-center whitespace-nowrap">
                                                   
                <a href="" id="deletebtn" value="<%= offer._id %>"
                    class="btn text-red-500 hover:text-red-700 transition-transform transform hover:scale-110 btn-sm deletebtn badge rounded-pill text-decoration-none ms-2"><i class="fas fa-trash-alt"></i></a>
                                                    <input type="hidden" id="offerId" value="<%= offer._id %>">
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9" class="px-6 py-12 text-center">
                                            <div class="flex flex-col items-center justify-center space-y-3">
                                                <i class="fas fa-inbox text-4xl text-gray-500"></i>
                                                <p class="text-gray-400 text-lg">No offers available</p>
                                                <p class="text-gray-500 text-sm">Create your first offer to get started</p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </table>
                        </div>
                    </div>
                </div>
                
                
                
               
            </section>
            

            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
            
            <script>
               document.addEventListener('DOMContentLoaded', function () {
const deleteButtons = document.querySelectorAll('.deletebtn');

deleteButtons.forEach(deleteButton => {
deleteButton.addEventListener('click', function (event) {
    event.preventDefault(); // Prevent default form submission behavior

    const offerId = this.getAttribute('value');

    

    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
    }).then((result) => {
        if (result.isConfirmed) {
            axios.post('/admin/deleteoffer', { offerId })
                .then(res => {
                    if (res.data.success) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "The Offer has been deleted.",
                            icon: "success"
                        }).then(() => {
                            window.location.href = '/admin/offer';
                        });
                    } else {
                        Swal.fire({
                            title: "Error!",
                            text: "Something went wrong.",
                            icon: "error"
                        });
                    }
                })
                .catch(err => {
                    console.log('error in delete offer', err);
                    Swal.fire({
                        title: "Error!",
                        text: "Something went wrong.",
                        icon: "error"
                    });
                });
        }
    });
});
});
});
            
            </script>


        </body>
        </html>